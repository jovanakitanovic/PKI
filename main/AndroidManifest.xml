<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proba">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:name=".GlobalData"

        >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllBooksActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".BookInfoActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".AllBooksActivity">
        </activity>
        <activity
            android:name=".MyAccountActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".RecommendationsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DataChangeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PasswordChangeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BookCommentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AllRecomendationsActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>